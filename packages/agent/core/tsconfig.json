{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "skipLibCheck": true
  }
}